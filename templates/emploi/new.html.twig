{% extends 'base.html.twig' %}

{% block title %}{{ emploi.id ? 'Modifier Emploi' : 'Créer Emploi' }}{% endblock %}

{% block body %}
    <h1>{{ emploi.id ? 'Modifier l\'Emploi du Temps' : 'Créer un Nouvel Emploi du Temps' }}</h1>

    {{ form_start(form) }}
 <div class="form-group">
            {{ form_label(form.jour) }}
            {{ form_widget(form.jour, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.titre) }}
            {{ form_widget(form.titre, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
    {{ form_label(form.nomEnseignant) }}
    {{ form_widget(form.nomEnseignant, { 'attr': {'class': 'form-control'} }) }}
</div>
        <div class="form-group">
            {{ form_label(form.startTime) }}
            {{ form_widget(form.startTime, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.endTime) }}
            {{ form_widget(form.endTime, { 'attr': {'class': 'form-control'} }) }}
        </div>
      <div class="form-group">
    {{ form_label(form.salle) }}
    {{ form_widget(form.salle, { 'attr': {'class': 'form-control'} }) }}
</div>
        <div class="form-group">
            {{ form_label(form.recurrencePattern) }}
            {{ form_widget(form.recurrencePattern, { 'attr': {'class': 'form-control'} }) }}
        </div>
        

        <button class="btn btn-primary">{{ emploi.id ? 'Modifier' : 'Créer' }}</button>
    {{ form_end(form) }}

    <a href="{{ path('emploi_index') }}" class="btn btn-secondary">Retour à la Liste</a>
{% endblock %}
